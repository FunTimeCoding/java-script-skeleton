<?xml version="1.0" encoding="UTF-8"?>
<project name="example-project" default="grunt" basedir=".">
    <property name="workspace" value="${basedir}"/>
    <target name="grunt">
        <delete dir="${workspace}/build"/>
        <mkdir dir="${workspace}/build/log"/>
        <exec executable="npm" dir="${workspace}">
            <arg value="up"/>
        </exec>
        <exec executable="node_modules/grunt-cli/bin/grunt" dir="${workspace}"/>
    </target>
</project>
